<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.admin.w7d1customviews.customview.MyCircleView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:radius="100"
        app:fillColor="@color/colorPrimary"
        android:id="@+id/myCircle"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onRadiusChanged"
        android:text="Change Radius"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onColorChanged"
        android:text="Change Color"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make it Bigger"
        android:onClick="onMakeBigger"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make it Smaller"
        android:onClick="onMakeSmaller"/>


</LinearLayout>